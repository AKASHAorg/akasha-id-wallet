{
    "name": "akasha-id-lib",
    "version": "1.0.0",
    "description": "Client/server library for AKASHA.id",
    "main": "dist/akasha-id-lib.js",
    "module": "src/index.js",
    "scripts": {
        "build": "webpack -p && cp ./dist/* ./test/",
        "testhub": "node ./node_modules/signalhub/bin.js -p 8888 listen &>/dev/null",
        "test-only": "concurrently -k -s first \"npm run testhub\" \"mocha-headless-chrome -f ./test/index.html\"",
        "test": "npm run build && npm run test-only"
    },
    "dependencies": {
        "broadcast-channel": "^2.2.0",
        "easy-web-crypto": "^1.0.4",
        "secure-webstore": "^1.1.0",
        "signalhub": "^4.9.0"
    },
    "devDependencies": {
        "babel": "^6.23.0",
        "chai": "^4.2.0",
        "concurrently": "^4.1.2",
        "mocha": "^6.2.0",
        "mocha-headless-chrome": "^2.0.3",
        "standard": "^13.1.0",
        "webpack": "^4.39.2",
        "webpack-cli": "^3.3.6"
    },
    "author": "AKASHA"
}
